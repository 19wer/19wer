		RegularPolygon re1=new RegularPolygon(6,4);
		RegularPolygon re2=new RegularPolygon(10,4,5,6);
        System.out.print(String.format("%.2f", re1.getPerimeter())+' ');
        System.out.println(String.format("%.2f", re1.getArea()));
        System.out.print(String.format("%.2f", re2.getPerimeter())+' ');
        System.out.println(String.format("%.2f", re2.getArea()));
	}

}
